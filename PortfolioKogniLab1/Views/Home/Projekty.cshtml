@{
    ViewData["Title"] = "Projekty";
}
@section Style
{
    <link href="~/css/projects.css" rel="stylesheet" />
}

<h1> Projekty </h1>

<div class="projects">
   

    @foreach (var project in ViewBag.Projekty)
    {
    <div class="project">
        <h2> @project.Name </h2>
        <img src="@project.ImageLink" />
        <p>@project.Description</p>
        <p>
            @project.Tags

            @foreach (var tag in project.Tags.Split(","))
                {
                    <b>#@tag</b>
                }
        </p>
    </div>
    }

</div>